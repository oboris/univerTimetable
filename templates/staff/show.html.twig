{% extends 'base.html.twig' %}

{% block title %}Staff{% endblock %}

{% block body %}
    <h1>Staff</h1>

    <table class="blueTable">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ staff.id }}</td>
        </tr>
        <tr>
            <th>FullName</th>
            <td>{{ staff.fullName }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ staff.email }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ staff.phone }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ staff.createdAt ? staff.createdAt|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Skills</th>
            <td>{{ staff.skills }}</td>
        </tr>
        <tr>
            <th>Comments</th>
            <td>{{ staff.comments }}</td>
        </tr>
        <tr>
            <th>Department</th>
            <td>
                {% for department in staff.departments %}
                    <a href="{{ path('department_show', {'id': department.id}) }}">{{ department }}</a>
                {% else %}
                    -
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('staff_index') }}">back to list</a>

    <a href="{{ path('staff_edit', {'id': staff.id}) }}">edit</a>

    {{ include('staff/_delete_form.html.twig') }}
{% endblock %}
