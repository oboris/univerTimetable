{% extends 'base.html.twig' %}

{% block title %}Department{% endblock %}

{% block body %}
    <h1>Department
        {% if department.company %}
            of Company (<a href="{{ path('company_show', {'id': department.company.id}) }}">{{ department.company }}</a>)
        {% endif %}
    </h1>

    <h2>
        Team Lead (
        {% if department.teamLead %}
            <a href="{{ path('staff_show', {'id': department.teamLead.id}) }}">{{ department.teamLead }}</a>
        {% else %}
            -
        {% endif %}
        )
    </h2>

    <table class="blueTable">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ department.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ department.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ department.description }}</td>
        </tr>
        <tr>
            <th>Staffs</th>
            <td>
                {% for staff in department.staffs %}

                    <a href="{{ path('staff_show', {'id': staff.id}) }}">{{ staff }}</a>

                {% else %}
                    -
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('department_index') }}">back to list</a>

    <a href="{{ path('department_edit', {'id': department.id}) }}">edit</a>

    {{ include('department/_delete_form.html.twig') }}
{% endblock %}
